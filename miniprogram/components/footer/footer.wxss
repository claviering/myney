.button{height:20vw;line-height:20vw;white-space:nowrap;background:#fff;border:1px solid #dcdfe6;color:#606266;-webkit-appearance:none;text-align:center;box-sizing:border-box;outline:none;transition:.1s;font-weight:500;-moz-user-select:none;-webkit-user-select:none;-ms-user-select:none;border-radius:4px}.button-active{color:#409eff;border-color:#c6e2ff;background-color:#ecf5ff}.components-footer{display:flex;align-items:center;justify-content:space-around}.components-footer .components-footer-button{height:25vw;width:25vw;border-radius:50%;background:var(--weui-BG-2);border:3vw solid;position:relative}.components-footer .negative{border-color:var(--weui-RED)}.components-footer .negative::after{content:"";background:var(--weui-RED);position:absolute;height:2vw;width:10vw;transform:translateY(-50%) translateX(-50%);top:50%;left:50%}.components-footer .positive{border-color:var(--weui-GREEN)}.components-footer .positive::before{content:"";background:var(--weui-GREEN);position:absolute;height:10vw;width:2vw;transform:translateY(-50%) translateX(-50%);top:50%;left:50%}.components-footer .positive::after{content:"";background:var(--weui-GREEN);position:absolute;height:2vw;width:10vw;transform:translateY(-50%) translateX(-50%);top:50%;left:50%}