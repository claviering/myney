<view class="show-data">
  <view class="show-time">
    <picker mode="date" value="{{date}}" bindchange="bindDateChange">
      <view class="picker">
        {{dataText}}
      </view>
    </picker>
  </view>
  <view class="input-box {{invaild ? 'invaild-input' : ''}}">
    <input 
      class="input-money"
      focus
      value="{{money}}"
      placeholder-class='input-placeholder'
      bindinput="setMoney"
      placeholder="金额" />
  </view>
  <view class="input-remark">
    <input
      value="{{remark}}"
      class="input-money"
      placeholder-class='input-placeholder'
      bindinput="setRemark"
      placeholder="备注" />
  </view>
  <view class="category-list" bindtap="selectCateGory">
    <view
      class="category-item"
      wx:for="{{categoryList}}"
      wx:key="item.key"
      data-key="{{item.key}}"
      >
      {{item.value}}
    </view>
  </view>
  <view class="delete" style="display: {{displayDelete}}">
    <button bindtap="remove">{{deleteText}}</button>
  </view>
</view>
  